{% extends 'layout/layout.twig' %}

{% block app_message %}
  <!-- -->
{% endblock %}

{% block app_body %}
  <div class="container">
    <br>
    <div id="patient_edit_response">
      {% include 'error/message.twig' %}
    </div>
    <h3 class="text-center">Listado de pacientes</h3>
    <table class="table table-hover table-responsive w-auto">
      <thead>
        <tr>
          <th>Nombre completo</th>
          <th>Domicilio</th>
          <th>Teléfono</th>
          <th>Género</th>
          <th>Número de Documento</th>
          <th>Acciones</th>
        </tr>
      </thead>
      {% for patient in patients %}
        <tbody>
          <tr>
            <th>{{ patient.fullName }}</th>
            <th>{{ patient.address }}</th>
            <th>{{ patient.phone }}</th>
            <th>{{ patient.gender }}</th>
            <th>{{ patient.documentNumber }}</th>
            <th>
              <a href="patients/show/{{patient.id}}">
                <span class="badge badge-info badge-pill">Ver/Editar</span>
              </a>
              <a href="patients/delete/{{patient.id}}">
                <span class="badge badge-danger badge-pill">Eliminar</span>
              </a>
            </th>
          </tr>
        </tbody>
      {% endfor %}
    </table>
    {% if patients is null %}
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p>
        <small>
          <strong>No hay pacientes cargados en el sistema.</strong>
          Puede cargar un nuevo paciente <a href="patients/create">aquí</a>
        </small>
      </p>
    </div>
    {% endif %}
    <!--Pagination -->
    {% if patients is not empty %}
      <nav class="my-4 pt-2">
        <ul class="pagination pagination-circle pg-bluegrey mb-0">

          <!--First-->
          <li class="page-item {{ (1 == page) ? 'disabled' }} clearfix d-none d-md-block">
            <a class="page-link" href="patients?page=1">First</a>
          </li>

          <!--Arrow left-->
          <li class="page-item {{ (1 == page) ? 'disabled' }}">
            <a class="page-link" href="patients?page={{ page - 1 }}" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previo</span>
            </a>
          </li>

          <!-- Numbers -->
          {% for index in range(1, last_page) %}
            <li class="page-item {{ (index == page) ? 'active' }}">
              <a class="page-link" href="patients?page={{ index }}">{{ index }}</a>
            </li>
          {% endfor %}

          <!--Arrow right-->
          <li class="page-item {{ (last_page == page) ? 'disabled' }}">
            <a class="page-link" href="patients?page={{ page + 1 }}" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Siguiente</span>
            </a>
          </li>

          <!--First-->
          <li class="page-item {{ (last_page == page) ? 'disabled' }} clearfix d-none d-md-block">
            <a class="page-link" href="patients?page={{ last_page }}">Last</a>
          </li>

        </ul>
      </nav>
    {% endif %}
    <!--/Pagination -->
  </div>
{% endblock %}
