{% extends 'modal/modal.twig' %}

{% block modal_title %}
  <i class="fa id-card-o">Registrar Datos Demográficos</i>
{% endblock %}

{% block modal_body %}
  <div id="demographic_data_response"></div>
  <form id="demographic_data_form" action="demographicdata/create/patient/{{patient_id}}" method="post">
    <div class="form-row">
      <div class="col col-sm col-xs">
        <div class="md-form">
          <div class="checkbox">
            <input type="checkbox" id="refrigerator" name="refrigerator">
            <label for="refrigerator">Heladera</label>
          </div>
        </div>
      </div>
      <div class="col col-sm col-xs">
        <div class="md-form">
          <div class="checkbox">
            <input type="checkbox" id="electricity" name="electricity">
            <label for="electricity">Electricidad</label>
          </div>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="col col-sm col-xs">

        <div class="md-form">
          <div class="checkbox">
            <input type="checkbox" id="pet" name="pet">
            <label for="pet">Mascota</label>
          </div>
        </div>
      </div>
      <div class="col col-sm col-xs">
        <div class="md-form">
          <label for="apartamentTypeId"></label>
          <select class="form-control" id="apartamentTypeId" name="apartamentTypeId">
            <option selected="true" value="default" disabled="disabled">Tipo de Vivienda</option>
            {% for option in apartamentType %}
              <option value="{{option.id}}">{{option.name}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col col-sm col-xs">
        <div class="md-form">
          <label for="heatingTypeId"></label>
          <select class="form-control" id="heatingTypeId" name="heatingTypeId">
            <option selected="true" value="default" disabled="disabled">Tipo de Calefacción</option>
            {% for option in heatingType %}
              <option value="{{option.id}}">{{option.name}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="col col-sm col-xs">
        <div class="md-form">
          <label for="waterTypeId"></label>
          <select class="form-control" id="waterTypeId" name="waterTypeId">
            <option selected="true" value="default" disabled="disabled">Tipo de Agua</option>
            {% for option in waterType %}
              <option value="{{option.id}}">{{option.name}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
    </div>
    <div class="text-center mt-1-half">
      <button class="btn btn-info mb-2 waves-effect waves-light">Registrar
        <i class="fa fa-send ml-1"></i>
      </button>
    </div>
  </form>
{% endblock %}
