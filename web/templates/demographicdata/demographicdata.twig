{% extends 'layout/layout.twig' %}

{% block app_body %}
  <div class="container mt-5">
    <div class="card card-cascade narrower">
      <!--Card image-->
      <div class="view gradient-card-header purple-gradient narrower py-4 mx-4 mb-3 d-flex justify-content-center align-items-center">
        <h4 class="font-bold font-up mb-0">Listado de Datos Demográficos</h4>
      </div>
      <!--/Card image-->
        <table class="table table-hover table-responsive w-auto">
          <thead class="mdb-color darken-3">
            <tr class="text-white">
              <th>Paciente</th>
              <th>Tipo de Documento</th>
              <th>Documento</th>
              <th>Heladera</th>
              <th>Electricidad</th>
              <th>Mascota</th>
              <th>Tipo de Vivienda</th>
              <th>Tipo de Calefacción</th>
              <th>Tipo de Agua</th>
            </tr>
          </thead>
          <tbody>
            {% for demographicElem in demographicData %}
              <tr>
                <td>
                  <a href="patient/show/{{ demographicElem.patient.id }}"> {{ demographicElem.patient.firstName }} {{ demographicElem.patient.lastName }} </a>
                </td>
                <td> {{ demographicElem.patient.documentType.name }} </td>
                <td> {{ demographicElem.patient.documentNumber }} </td>
                <td> {{ (demographicElem.refrigerator == "0")? "No":"Si"}} </td>
                <td> {{ (demographicElem.electricity == "0")? "No":"Si"}} </td>
                <td> {{ (demographicElem.pet == "0")? "No":"Si"}} </td>
                <td> {{ demographicElem.apartamentType.name }}  </td>
                <td> {{ demographicElem.heatingType.name }} </td>
                <td> {{ demographicElem.waterType.name }} </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        {% if demographicData is empty %}
          <div class="alert alert-info alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <p>
              <small>
                <strong>No se encontraron datos demográficos.</strong>
              </small>
            </p>
          </div>
        {% endif %}
      </div>

      <!--Bottom Table UI-->
      <div class="d-flex justify-content-center">

        <!--Pagination -->
        {% if demographicData is not empty %}
          <nav class="my-4 pt-2">
            <ul class="pagination pagination-circle pg-bluegrey mb-0">

              <!--First-->
              <li class="page-item {{ (1 == page) ? 'disabled' }} clearfix d-none d-md-block">
                <a class="page-link" href="{{location}}&page=1">First</a>
              </li>

              <!--Arrow left-->
              <li class="page-item {{ (1 == page) ? 'disabled' }}">
                <a class="page-link" href="{{location}}&page={{ page - 1 }}" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previo</span>
                </a>
              </li>

              <!-- Numbers -->
              {% for index in range(1, last_page) %}
                <li class="page-item {{ (index == page) ? 'active' }}">
                  <a class="page-link" href="{{location}}&page={{index}}">{{ index }}</a>
                </li>
              {% endfor %}

              <!--Arrow right-->
              <li class="page-item {{ (last_page == page) ? 'disabled' }}">
                <a class="page-link" href="{{location}}&page={{ page + 1 }}" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Siguiente</span>
                </a>
              </li>

              <!--First-->
              <li class="page-item {{ (last_page == page) ? 'disabled' }} clearfix d-none d-md-block">
                <a class="page-link" href="{{location}}&page={{ last_page }}">Last</a>
              </li>

            </ul>
          </nav>
        {% endif %}
        <!--/Pagination -->

      </div>
      <!--Bottom Table UI-->
    </div>
    <br>
  </div>
{% endblock %}
