{% extends 'layout/layout.twig' %}

{% block app_body %}

  <div class="container" style="margin-top: 45px;">
    <div id="healthControl_edit_response"></div>

    <ul class="nav nav nav-pills nav-fill" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#show" role="tab">Control de salud</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#edit" role="tab">Editar</a>
      </li>
    </ul>

    <!-- Tab panels -->
    <div class="tab-content">
      <!--Panel 1-->
      <div class="tab-pane fade in show active" id="show" role="tabpanel">
        <!--Card-->
        <div class="card card-cascade wider reverse my-4">

          <!--Card content-->
          <div class="card-body text-center">
            <!--Title-->
            <h3 class="card-title">Control de salud</h3>
            <h5 class="indigo-text">
              <strong>{{healthControl.date}}</strong>
            </h5>
            <div class="row">
              <div class="col-lg-4 col-sm-6">
                <p class="mb-0">
                  <strong>Peso</strong>
                </p>
                <p>{{healthControl.weight}} gr</p>
              </div>
              <div class="col-lg-4 col-sm-6">
                <p class="mb-0">
                  <strong>Talla</strong>
                </p>
                <p>{{healthControl.height}} cm</p>
              </div>
              <div class="col-lg-4 col-sm-6">
                <p class="mb-0">
                  <strong>PC</strong>
                </p>
                <p>{{healthControl.pc}}</p>
              </div>
              <div class="col-lg-4 col-sm-6">
                <p class="mb-0">
                  <strong>PPC</strong>
                </p>
                <p>{{healthControl.ppc}}</p>
              </div>
              <div class="col-lg-4 col-sm-6">
                <p class="mb-0">
                  <strong>Vacunas completas</strong>
                </p>
                <p>{{healthControl.completeVaccines ? "Si":"No"}}</p>
              </div>
              <div class="col-lg-4 col-sm-6">
                <p class="mb-0">
                  <strong>Maduración acorde</strong>
                </p>
                <p>{{healthControl.accordingMaturationContext ? "Si":"No"}}</p>
              </div>
              <div class="col-lg-12 col-sm-12">
                <p class="mb-0">
                  <strong>Examen físico común</strong>
                </p>
                <p>{{healthControl.commonPhysicalExamination ? "Si":"No"}}</p>
              </div>
              <div class="col-lg-12 col-sm-12">
                <p class="mb-0">
                  <strong>Alimentación</strong>
                </p>
                <p>{{healthControl.feeding | default("No declarado")}}</p>
              </div>
              <div class="col-lg-12 col-sm-12">
                <p class="mb-0">
                  <strong>Observaciones Examen Físico</strong>
                </p>
                <p>{{healthControl.physicalExaminationObservations | default("Sin observaciones")}}</p>
              </div>
              <div class="col-lg-12 col-sm-12">
                <p class="mb-0">
                  <strong>Observaciones vacuncación</strong>
                </p>
                <p>{{healthControl.vaccinesObservations | default("Sin observaciones")}}</p>
              </div>
              <div class="col-lg-12 col-sm-12">
                <p class="mb-0">
                  <strong>Observaciones maduración</strong>
                </p>
                <p>{{healthControl.maturationObservations | default("Sin observaciones")}}</p>
              </div>
              <div class="col-lg-12 col-sm-12">
                <p class="mb-0">
                  <strong>Observaciones generales</strong>
                </p>
                <p>{{healthControl.generalObservations | default("Sin observaciones")}}</p>
              </div>
            </div>
            <img class="mt-3" style="max-width: 25px;" src="web/assets/images/icon.png" alt="Logo de la ficha del paciente">
            </div>
            <!--/.Card content-->

          </div>
          <!--/.Card-->

        </div>
        <!--/.Panel 1-->
        <!--Panel 2-->
        <div class="tab-pane fade" id="edit" role="tabpanel">
          <!--Card-->
          <div class="card card-cascade wider reverse my-4">

            <!--Card content-->
            <div class="card-body text-center">
              <!--Title-->
              <form id="healthcontrol_edit_form" action="healthcontrols/edit/{{healthControl.id}}" method="post">
                <div class="form-row">
                  <div class="col-lg-4 col-sm-6">
                    <p class="mb-0">
                      <strong>Peso(gr)</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="number" min="0" name="weight" value="{{healthControl.weight}}" placeholder="Peso">
                    </div>
                  </div>
                  <div class="col-lg-4 col-sm-6">
                    <p class="mb-0">
                      <strong>Talla(cm)</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="number" min="0" name="height" value="{{healthControl.height}}" placeholder="Talla">
                    </div>
                  </div>
                  <div class="col-lg-4 col-sm-6">
                    <p class="mb-0">
                      <strong>PC</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="number" min="0" name="pc" value="{{healthControl.pc}}" placeholder="PC">
                    </div>
                  </div>
                  <div class="col-lg-12 col-sm-12">
                    <p class="mb-0">
                      <strong>PPC</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="number" min="0" name="ppc" value="{{healthControl.ppc}}" placeholder="PPC">
                    </div>
                  </div>
                  <div class="col-lg-12 col-sm-12">
                    <p class="mb-0">
                      <strong>Alimentación</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="text" name="feeding" value="{{healthControl.feeding}}" placeholder="Alimentación">
                    </div>
                  </div>
                  <div class="col-lg-12 col-sm-12">
                    <p class="mb-0">
                      <strong>Observaciones Examen Físico</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="text" name="physicalExaminationObservations" value="{{healthControl.physicalExaminationObservations}}" placeholder="Observaciones Examen Físico">
                    </div>
                  </div>
                  <div class="col-lg-12 col-sm-12">
                    <p class="mb-0">
                      <strong>Observaciones vacuncación</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="text" name="vaccinesObservations" value="{{healthControl.vaccinesObservations}}" placeholder="Observaciones vacuncación">
                    </div>
                  </div>
                  <div class="col-lg-12 col-sm-12">
                    <p class="mb-0">
                      <strong>Observaciones maduración</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="text" name="maturationObservations" value="{{healthControl.maturationObservations}}" placeholder="Observaciones maduración">
                    </div>
                  </div>
                  <div class="col-lg-12 col-sm-12">
                    <p class="mb-0">
                      <strong>Observaciones generales</strong>
                    </p>
                    <div class="md-form mb-0 card-style-input">
                      <input class="form-control text-center" type="text" name="generalObservations" value="{{healthControl.generalObservations}}" placeholder="Observaciones generales">
                    </div>
                  </div>
                  <div class="col-lg-4 col-sm-6">
                    <div class="md-form">
                      <div class="checkbox">
                        <input type="checkbox" id="completeVaccines" name="completeVaccines">
                        <label for="completeVaccines">Vacunas completas</label>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4 col-sm-6">
                    <div class="md-form">
                      <div class="checkbox">
                        <input type="checkbox" id="accordingMaturationContext" name="accordingMaturationContext">
                        <label for="accordingMaturationContext">Maduración acorde</label>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4 col-sm-6">
                    <div class="md-form">
                      <div class="checkbox">
                        <input type="checkbox" id="commonPhysicalExamination" name="commonPhysicalExamination">
                        <label for="commonPhysicalExamination">Examen fisico normal</label>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button id="edit_button" type="submit" class="btn btn-indigo" title="Editar Control de salud">
                    Editar control de salud
                  </button>
                </div>
              </form>
              <br>
            </div>
            <!--/.Card content-->

          </div>
          <!--/.Card-->
        </div>
        <!--/.Panel 2-->
      </div>
    </div>
  {% endblock %}

  {% block scripts %}
    <script src="web/assets/javascripts/components/healthcontrol/edit.js"></script>
  {% endblock %}
